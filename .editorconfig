root = true

[*]
indent_size = 2
indent_style = space

[!*.{diff,patch}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.zig]
indent_size = 4
max_line_length = 100

[*.zig.zon]
indent_size = 4

[.gitattributes]
indent_size = 4
indent_style = tab
